{
  "ManifestVersion": "1.0",
  "LastUpdated": "2026-01-20",
  "Deployments": [
    {
      "Name": "SQL Database Initialization",
      "Description": "Creates initial database schema and tables for Bepoz POS system",
      "Category": "SQL Scripts",
      "Type": "SQL",
      "Files": [
        "sql-scripts/init-database.sql"
      ],
      "Parameters": [
        {
          "Name": "ServerName",
          "Description": "SQL Server instance name (e.g., localhost\\SQLEXPRESS)",
          "DefaultValue": "localhost"
        },
        {
          "Name": "DatabaseName",
          "Description": "Database name to create/initialize",
          "DefaultValue": "BepozPOS"
        }
      ]
    },
    {
      "Name": "Update Database Schema",
      "Description": "Updates database schema to latest version with new tables and columns",
      "Category": "SQL Scripts",
      "Type": "SQL",
      "Files": [
        "sql-scripts/update-schema.sql"
      ],
      "Parameters": [
        {
          "Name": "ServerName",
          "Description": "SQL Server instance name",
          "DefaultValue": "localhost"
        },
        {
          "Name": "DatabaseName",
          "Description": "Existing database name",
          "DefaultValue": "BepozPOS"
        }
      ]
    },
    {
      "Name": "Configure Client Settings",
      "Description": "Configures client-specific settings including license keys, company info, and regional settings",
      "Category": "Configuration",
      "Type": "PowerShell",
      "Files": [
        "configs/Set-ClientConfiguration.ps1"
      ],
      "Parameters": [
        {
          "Name": "CompanyName",
          "Description": "Client company name",
          "DefaultValue": ""
        },
        {
          "Name": "LicenseKey",
          "Description": "Bepoz license key",
          "DefaultValue": ""
        },
        {
          "Name": "Region",
          "Description": "Region code (US, CA, UK, etc.)",
          "DefaultValue": "US"
        }
      ]
    },
    {
      "Name": "Install Bepoz POS Application",
      "Description": "Installs the Bepoz POS application with specified configuration",
      "Category": "Installers",
      "Type": "Executable",
      "Files": [
        "installers/BepozPOS-Setup.exe"
      ],
      "Arguments": "/silent /norestart /installpath={{InstallPath}}",
      "Parameters": [
        {
          "Name": "InstallPath",
          "Description": "Installation directory",
          "DefaultValue": "C:\\Program Files\\Bepoz"
        }
      ]
    },
    {
      "Name": "Install SQL Server Express",
      "Description": "Installs SQL Server Express with default configuration for Bepoz",
      "Category": "Installers",
      "Type": "PowerShell",
      "Files": [
        "installers/Install-SQLExpress.ps1"
      ],
      "Parameters": [
        {
          "Name": "InstanceName",
          "Description": "SQL Server instance name",
          "DefaultValue": "BEPOZ"
        }
      ]
    },
    {
      "Name": "Configure Windows Firewall",
      "Description": "Configures Windows Firewall rules for Bepoz POS and SQL Server",
      "Category": "Configuration",
      "Type": "PowerShell",
      "Files": [
        "configs/Set-FirewallRules.ps1"
      ],
      "Parameters": []
    },
    {
      "Name": "Setup Backup Job",
      "Description": "Creates scheduled task for automated database backups",
      "Category": "Configuration",
      "Type": "PowerShell",
      "Files": [
        "configs/Set-BackupSchedule.ps1"
      ],
      "Parameters": [
        {
          "Name": "BackupPath",
          "Description": "Backup directory path",
          "DefaultValue": "C:\\Backups\\Bepoz"
        },
        {
          "Name": "ScheduleTime",
          "Description": "Daily backup time (24-hour format, e.g., 02:00)",
          "DefaultValue": "02:00"
        }
      ]
    },
    {
      "Name": "System Health Check",
      "Description": "Runs comprehensive system health check and generates report",
      "Category": "Diagnostics",
      "Type": "PowerShell",
      "Files": [
        "diagnostics/Test-SystemHealth.ps1"
      ],
      "Parameters": []
    },
    {
      "Name": "Import Sample Data",
      "Description": "Imports sample products, categories, and test data for training purposes",
      "Category": "SQL Scripts",
      "Type": "SQL",
      "Files": [
        "sql-scripts/import-sample-data.sql"
      ],
      "Parameters": [
        {
          "Name": "ServerName",
          "Description": "SQL Server instance name",
          "DefaultValue": "localhost"
        },
        {
          "Name": "DatabaseName",
          "Description": "Database name",
          "DefaultValue": "BepozPOS"
        }
      ]
    },
    {
      "Name": "Reset Admin Password",
      "Description": "Resets the administrator password to default value",
      "Category": "Diagnostics",
      "Type": "SQL",
      "Files": [
        "sql-scripts/reset-admin-password.sql"
      ],
      "Parameters": [
        {
          "Name": "ServerName",
          "Description": "SQL Server instance name",
          "DefaultValue": "localhost"
        },
        {
          "Name": "DatabaseName",
          "Description": "Database name",
          "DefaultValue": "BepozPOS"
        }
      ]
    },
    {
      "Name": "Update Client License",
      "Description": "Updates license key and registration information",
      "Category": "Configuration",
      "Type": "PowerShell",
      "Files": [
        "configs/Update-License.ps1"
      ],
      "Parameters": [
        {
          "Name": "LicenseKey",
          "Description": "New license key",
          "DefaultValue": ""
        }
      ]
    },
    {
      "Name": "Collect Diagnostic Logs",
      "Description": "Collects application logs, SQL logs, and system information for troubleshooting",
      "Category": "Diagnostics",
      "Type": "PowerShell",
      "Files": [
        "diagnostics/Export-DiagnosticLogs.ps1"
      ],
      "Parameters": [
        {
          "Name": "OutputPath",
          "Description": "Path to save diagnostic bundle",
          "DefaultValue": "C:\\Temp\\BepozDeployment\\Diagnostics"
        }
      ]
    }
  ]
}
